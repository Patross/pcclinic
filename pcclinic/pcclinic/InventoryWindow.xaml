        <TextBox Name="txtQuantity" HorizontalAlignment="Left" Height="23" Margin="10,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtValue" HorizontalAlignment="Left" Height="23" Margin="10,151,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Item Name" HorizontalAlignment="Left" Margin="150,67,0,0" VerticalAlignment="Top" Height="23"/>
        <Label Content="Item Description" HorizontalAlignment="Left" Margin="150,95,0,0" VerticalAlignment="Top" Height="23"/>
        <Label Content="Item Quantity" HorizontalAlignment="Left" Margin="150,123,0,0" VerticalAlignment="Top" Height="23"/>
        <Label Content="Item Value" HorizontalAlignment="Left" Margin="150,151,0,0" VerticalAlignment="Top" Height="23"/>
        <Button Name="btnInsertItem" Content="Insert" HorizontalAlignment="Left" Margin="31,179,0,0" VerticalAlignment="Top" Width="75" Click="btnInsertItem_Click"/>

    </Grid>
</Window>
